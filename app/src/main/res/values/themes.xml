<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de la aplicación -->
    <style name="Theme.AppName" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item> <!-- Desactiva el ActionBar -->
        <item name="windowNoTitle">true</item> <!-- Desactiva el título de la ventana -->
        <item name="colorPrimary">@color/red_orange</item>  <!-- Usar el rojo-anaranjado -->
        <item name="colorPrimaryVariant">@color/black</item>  <!-- Usar el negro -->
        <item name="colorOnPrimary">@color/white</item>  <!-- Texto blanco sobre fondo rojo-anaranjado -->
        <item name="colorSecondary">@color/light_gray</item>  <!-- Gris claro para secundario -->
        <item name="colorSecondaryVariant">@color/dark_gray</item>  <!-- Gris oscuro -->
        <item name="colorOnSecondary">@color/white</item>  <!-- Texto blanco sobre gris claro -->
        <item name="android:windowBackground">@color/black</item>  <!-- Fondo negro para la ventana -->

        <item name="android:fontFamily">@font/outfit</item>
    </style>

    <!-- Tema específico para SplashActivity -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>

</resources>