<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".IkasleActivity">

    <!-- Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- TÃ­tulo de la pantalla -->
    <TextView
        android:id="@+id/ikasle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horario de Ikasle"
        android:textColor="#818589"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Horario del Ikasle (Ejemplo) -->
    <TextView
        android:id="@+id/ikasle_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horario: Martes y Jueves"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/ikasle_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
